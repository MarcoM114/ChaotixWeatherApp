<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER"
      spacing="25"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.chaotixweatherapp.HelloController">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Logo-->
    <ImageView fitWidth="350" preserveRatio="true">
        <image>
            <Image url="@chaotix_weather.png"/>
        </image>
    </ImageView>

    <!-- Titel -->
    <Label text="Bitte wÃ¤hlen Sie aus:"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <!-- toggles -->
    <HBox spacing="20" alignment="CENTER">
        <ComboBox fx:id="locationBox"
                  promptText="Standort"
                  prefWidth="180"/>

        <ComboBox fx:id="unitBox"
                  promptText="Temperatureinheit"
                  prefWidth="180"/>
    </HBox>

    <!-- OK knopf -->
    <Button text="OK"
            prefWidth="120"
            onAction="#onOkClick"
            style="-fx-font-size: 14px;"/>

</VBox>
