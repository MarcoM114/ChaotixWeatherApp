<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER"
      prefHeight="520.0" prefWidth="520.0"
      spacing="18"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.chaotixweatherapp.HelloController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30"/>
    </padding>

    <ImageView fitWidth="350" preserveRatio="true">
        <image>
            <Image url="@chaotix_weather.png"/>
        </image>
    </ImageView>

    <Label style="-fx-font-size: 22px; -fx-font-weight: bold;"
           text="Bitte wählen Sie aus:"/>

    <HBox alignment="CENTER" spacing="20">
        <TextField fx:id="locationBox"
                   prefHeight="25.0"
                   prefWidth="182.0"
                   promptText="Standort (z.B. Wien)"/>

        <ComboBox fx:id="unitBox"
                  prefWidth="180"
                  promptText="Temperatureinheit"/>
    </HBox>

    <Button fx:id="okButton"
            onAction="#onOkClick"
            prefWidth="120"
            style="-fx-font-size: 14px;"
            text="OK"/>

    <!-- ✅ shows errors like "Name des Standortes nicht bekannt!" -->
    <Label fx:id="errorLabel"
           text=""
           wrapText="true"
           maxWidth="420"
           style="-fx-text-fill: #d00000; -fx-font-size: 13px;"/>

</VBox>
